              <% } %> <% if (nominee.pub9) { %>
              <li><%- nominee.pub9 %></li>
              <% } %> <% if (nominee.pub10) { %>
              <li><%- nominee.pub10 %></li>
              <% } %>
            </ol>
          </div>
          <footer></footer>
        </article>
        <% }) %>
