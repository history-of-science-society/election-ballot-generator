<section class="hero is-primary <%= size %>" id="top">
  <!-- Hero head: will stick at the top -->
  <div class="hero-head">
    <nav class="navbar">
      <div class="container">
        <div class="navbar-brand">
          <a href="https://hssonline.org" class="navbar-item">
            <img src="/img/hss.png" alt="Logo" />
          </a>
          <span class="navbar-burger burger" data-target="navbarMenuHeroA">
            <span></span>
            <span></span>
            <span></span>
          </span>
        </div>
        <div id="navbarMenuHeroA" class="navbar-menu">
          <div class="navbar-end">
            <a
              href="/"
              class="navbar-item <%= size === 'is-medium' ? 'is-active' : '' %>"
            >
              <span class="icon"><i class="fas fa-users"></i></span>
              <span>Candidates</span></a
            >
            <a
              href="/ballot"
              class="navbar-item <%= size !== 'is-medium' ? 'is-active' : '' %>"
            >
              <span class="icon">
                <i class="fas fa-vote-yea"></i>
              </span>
              <span>Vote</span></a
            >
            <a class="navbar-item">
              <span class="icon">
                <i class="fas fa-file-download"></i>
              </span>
              <span>Paper Ballot</span>
            </a>
            <span class="navbar-item">
              <a class="button is-primary is-inverted">
                <span class="icon is-danger">
                  <i class="far fa-heart"></i>
                </span>
                <span>Donate</span>
              </a>
            </span>
          </div>
        </div>
      </div>
    </nav>
  </div>

  <!-- Hero content: will be in the middle -->
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title is-family-secondary">
        History of Science Society
      </h1>
      <h2 class="subtitle">
        2020 Election Ballot
      </h2>
    </div>
  </div>

  <!-- Hero footer: will stick at the bottom -->
  <% if (size === 'is-medium') { %>
  <div class="hero-foot">
    <nav class="tabs">
      <div class="container">
        <ul>
          <li><a href="#council">Council</a></li>
          <li><a href="#nomcom">Nominating Committee</a></li>
          <li><a href="#delegate">Council Delegate</a></li>
          <li><a href="#secretary">Secretary</a></li>
          <li><a href="#treasurer">Treasurer</a></li>
        </ul>
      </div>
    </nav>
  </div>
  <% } %>
</section>
